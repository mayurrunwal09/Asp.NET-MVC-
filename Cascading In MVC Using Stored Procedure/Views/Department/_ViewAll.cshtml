@model IEnumerable<Cascading_In_MVC_Using_Stored_Procedure.Models.Department >

<h2> Employee</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(i=> i.DepId )
            </th>

            <th>
                @Html.DisplayNameFor(i=> i.DepName )
            </th>
            <th>      
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Department",null,Context.Request.Scheme)','New Department')" class="btn btn-success"><i class="fas fa-random"></i>Add Department</a>
            </th>


        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.DepId )
                </td>

                <td>
                    @Html.DisplayFor(modelitem => item.DepName )
                </td>

          

              


                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Department",new{id = item.DepId  },Context.Request.Scheme)','Edit Emp')" class="btn btn-info">Edit </a>
                        <form asp-action="Delete" asp-route-id="@item.DepId " onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>